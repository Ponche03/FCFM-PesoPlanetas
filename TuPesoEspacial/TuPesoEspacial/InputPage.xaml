<Page x:Class="TuPesoEspacial.InputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuPesoEspacial"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="InputPage">

    <!-- Fade-in animation -->
    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetProperty="Opacity"
                        From="0.0"
                        To="1.0"
                        Duration="0:0:1" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <!-- Scalable layout with fixed 1920x1080 grid -->
    <Viewbox Stretch="UniformToFill">
        <Grid Width="1920" Height="1080">
            <!-- Background -->
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Fondos/FONDO 2.png" Stretch="UniformToFill"/>
            </Grid.Background>

            <!-- Astronaut image -->
            <Image Source="/Images/Astronautas/POSE_3.png"
                   Width="320"
                   Height="320"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="100,0,100,80"/>

            <!-- Main content -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        TextBlock.TextAlignment="Center">

                <!-- Title -->
                <TextBlock FontSize="90" Margin="0,0,0,30" FontFamily="Fonts/#Funky Smile" Foreground="White">
                    <Run Text="Escribe tu peso en"/>
                    <Run Foreground="#FFFED000" Text=" La Tierra"/>
                </TextBlock>

                <!-- Weight input -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="WeightTextBox"
                             Width="300"
                             FontSize="48"
                             FontFamily="Fonts/#Funky Smile"
                             Foreground="White"
                             Background="Transparent"
                             BorderThickness="0,0,0,4"
                             CaretBrush="White"
                             KeyDown="WeightTextBox_KeyDown"
                             BorderBrush="#FED000"/>
                    
                    <TextBlock Text="KG"
                               FontSize="48"
                               FontFamily="Fonts/#Funky Smile"
                               Foreground="White"
                               VerticalAlignment="Bottom"
                               Margin="20,0,0,5"/>
                </StackPanel>

                <!-- Button -->
                <Button x:Name="CalculateButton" 
                        Content="SIGUIENTE" 
                        Click="CalculateButton_Click" 
                        FontSize="48" 
                        FontFamily="Fonts/#Funky Smile"
                        Cursor="Hand" 
                        HorizontalAlignment="Center"
                        Width="400"
                        Height="100"
                        Margin="0,80,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FED000"/>
                            <Setter Property="Foreground" Value="#2C3E50"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F39C12"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Error message -->
                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="#FF5252"
                           FontSize="20"
                           Margin="0,20,0,0"
                           FontWeight="Bold"
                           FontFamily="Arial"/>
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
